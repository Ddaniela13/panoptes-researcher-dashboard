{% extends "base.njk" %}

{% block head %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.0.3/dist/leaflet.css" />
    <link href="./modules/leaflet.markercluster/dist/MarkerCluster.Default.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid" class="world-container">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Top Images</a></li>
            <li><a href="#">Analytics</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <div class="page-header" style="margin: 0px 0 10px;">
            <h2 style="display:inline-block;" >
              <img style="display:inline-block;" src="./static/images/globe-icon.png" width="100" height="100" class="img-responsive" alt="Generic placeholder thumbnail">
              Active Users
            </h2>
          </div>
          <div class="page-header" style="display:inline-block">
            <h4 style="display:inline-block; padding-right: 10pt;">Map Key</h4>
            <span style="font-size: 20px; color: red;"> ☀</span>
            <span class="text-muted">: New Classification </span>
            <span style="font-size: 20px; color: rgb(255, 215, 0);"> ☀</span>
            <span class="text-muted">: New Comment </span>
          </div>

          <div id="map"></div>

          <h3>Live Comments</h3>
          <div id="recent-comments" class="col-sm-3 col-sm-offset-9"></div>

          <div id="comment-box"></div>
        </div>
      </div>
    </div>
{% endblock %}

{% block foot %}
    <script src="./modules/socket.io-client/dist/socket.io.min.js"></script>
    <script src="./modules/leaflet/dist/leaflet.js"></script>
    <script src="./modules/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
    <script src="./static/js/active-user-map.js"></script>
{% endblock %}
